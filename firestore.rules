rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper to check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // Products: Public Read, Admin Write (Auth users can update for stock)
    match /products/{productId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      allow update: if isAuth(); // Needed for client-side stock deduction
    }
    
    // Categories: Public Read, Admin Write
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Users: Own Data Access
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Orders: Create/Read Own
    match /orders/{orderId} {
      allow read: if isAuth() && (resource.data.customerId == request.auth.uid || isAdmin());
      allow create: if isAuth();
      allow update: if isAuth() && (resource.data.customerId == request.auth.uid || isAdmin());
    }
    
    // Notifications: Admin Read, System Write (users can write for now to simulate system)
    match /notifications/{notificationId} {
      allow read: if isAuth() && (resource.data.userId == request.auth.uid);
      allow write: if isAuth(); 
    }

    // Counters: Public Read, Auth Write (for order IDs)
    match /orderCounters/{counterId} {
      allow read: if true;
      allow write: if isAuth();
    }
    
    // Areas: Public Read, Admin Write
    match /areas/{areaId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Catch-all: Deny (Default)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
